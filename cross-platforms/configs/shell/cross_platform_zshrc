# Cross-platform shell configuration file
# This file contains configurations that are common across all platforms

# Load cross-platform configurations
source ~/dots/cross-platforms/configs/shell/cross_platform_exports
source ~/dots/cross-platforms/configs/shell/cross_platform_functions
source ~/dots/cross-platforms/configs/shell/cross_platform_options
source ~/dots/cross-platforms/configs/shell/cross_platform_aliases

# Load platform-specific configurations
case "$(uname -s)" in
    Darwin*)
        source ~/dots/macos/configs/shell/macos_specific
        ;;
    Linux*)
        source ~/dots/linux/configs/shell/linux_specific
        ;;
    CYGWIN*|MINGW*|MSYS*)
        source ~/dots/windows/configs/shell/windows_specific
        ;;
esac

# Load additional configurations if they exist
if [[ -d ~/dots/cross-platforms/configs/shell/aliases ]]; then
    for file in ~/dots/cross-platforms/configs/shell/aliases/*; do
        if [[ -f "$file" ]]; then
            source "$file"
        fi
    done
fi
